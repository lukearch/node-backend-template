{
  "name": "node-backend-template",
  "version": "1.0.0",
  "description": "This is a simple example of a Node server using Restify and TypeScript.",
  "engines": {
    "node": "16.17.1"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev-win": "SET NODE_ENV=development&& nodemon",
    "dev-linux": "export NODE_ENV=development&& nodemon",
    "build": "npx ts-node-dev build.ts && tree -L 3 dist -a -I './*.js.map'",
    "start-win": "SET NODE_ENV=production&& node -r module-alias/register ./dist --env=production",
    "start-linux": "export NODE_ENV=production&& node -r module-alias/register ./dist --env=production",
    "start-dev-linux": "export NODE_ENV=development&& node -r module-alias/register ./dist --env=development",
    "staging-linux": "export NODE_ENV=staging&& node -r module-alias/register ./dist --env=staging",
    "prepare": "husky install",
    "lint": "npx eslint src/**/*.ts --fix",
    "format": "npx prettier src/**/*.ts --write",
    "typeorm-win": "SET NODE_ENV=development&& ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm-linux": "export NODE_ENV=development&& ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:show-win": "npm run typeorm-win migration:show -- -d src/database/data-source.ts",
    "typeorm:migration:run-win": "npm run typeorm-win migration:run -- -d src/database/data-source.ts",
    "typeorm:migration:run-linux": "npm run typeorm-linux migration:run -- -d src/database/data-source.ts",
    "typeorm:migration:create-win": "npm run typeorm-win migration:create src/database/migrations/%npm_config_migration%",
    "typeorm:migration:create-linux": "npm run typeorm-linux migration:generate -- -d src/database/data-source.ts",
    "docker-build-dev": "yarn build && docker build --no-cache --progress=plain -t node-backend-template:dev -f Dockerfile.dev .",
    "docker-build-staging": "yarn build && docker build --no-cache --progress=plain -t node-backend-template:staging -f Dockerfile.staging .",
    "docker-build-prod": "yarn build && docker build --no-cache --progress=plain -t node-backend-template:prod -f Dockerfile.prod .",
    "print-tree": "tree -L 3 dist -a -I './*.js.map'"
  },
  "keywords": [
    "node",
    "typescript",
    "restify",
    "template",
    "typeorm"
  ],
  "author": "Lucas Larangeira <lukearch@beblitz.com.br>",
  "license": "MIT",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node-dev --files -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@Classes": "dist/classes",
    "@Config": "dist/config",
    "@Routes": "dist/routes",
    "@Core": "dist/core",
    "@Enums": "dist/enums",
    "@Errors": "dist/errors",
    "@Database": "dist/database",
    "@Interfaces": "dist/interfaces",
    "@Middlewares": "dist/middlewares",
    "@Models": "dist/models",
    "@Scripts": "dist/scripts",
    "@Services": "dist/services",
    "@Types": "dist/types",
    "@Utils": "dist/utils"
  },
  "dependencies": {
    "axios": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "command-line-args": "^5.2.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.0",
    "helmet": "^6.0.0",
    "jet-logger": "^1.2.6",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "restify": "^8.3.2",
    "restify-cors-middleware": "^1.1.1",
    "restify-errors": "^8.0.2",
    "restify-plugins": "^1.6.0",
    "tsyringe": "^4.7.0",
    "typeorm": "0.3.11",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/command-line-args": "^5.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "@types/restify": "^8.5.5",
    "@types/restify-cors-middleware": "^1.0.2",
    "@types/restify-errors": "^4.3.4",
    "@types/restify-plugins": "^1.5.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "assert": "^2.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "tree-node-cli": "^1.6.0",
    "ts-jest": "^29.0.3",
    "ts-node": "10.7.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0"
  }
}
